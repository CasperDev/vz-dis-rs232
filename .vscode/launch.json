{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "dezog",
            "request": "launch",
            "name": "Internal Sim",
            "remoteType": "zsim",
            "zsim": {
                "loadZxRom": false,
                "visualMemory": true,
            },
            "sjasmplus": [
                {
                    "path": "${workspaceFolder}\\out\\${config:targetName}.sld"
                }
            ],
            "history": {
                "reverseDebugInstructionCount": 1000000,
                "spotCount": 10,
                "codeCoverageEnabled": true
            },
            "startAutomatically": false,
            //"skipInterrupt": true,
            "commandsAfterLaunch": [
               // "-logpoint enable",
               // "-assert enable",
               // "-wpmem enable"
               "-mv 0x7000 0x0800", // show VRAM Memory Dump
			   "-msetb 0x6800 0xff 256", // fill Keyboard area with FF
			   "-mv 0x6800 256",         // view Keyboard area
            ],
            "disassemblerArgs": {
                "esxdosRst": false
            },
            "rootFolder": "${workspaceFolder}",
            //"topOfStack": "stack_top",
            //"load": "z80-sample-program.sna",
            "loadObjs": [
                {
                    "path": "out\\${config:targetName}.rom",
                    "start": "0x0000"
                }
            ],
            "execAddress": "0x0000",
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        },

        {
            "type": "dezog",
            "request": "launch",
            "name": "Unit Tests",
            "unitTests": true,
            "remoteType": "zsim",
            //"remoteType": "cspect",
            //"remoteType": "zrcp",
            //"resetOnLaunch": true,
            //"skipInterrupt": true,
            "commandsAfterLaunch": [
                "-wpmem enable",
                "-assert enable",
                "-logpoint enable", // Enable all logpoints, especially [UNITTEST]
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "sjasmplus": [
                {
                    "path": "z80-sample-program.list",
                }
            ],
            "rootFolder": "${workspaceFolder}",
            //"load": "z80-sample-program.sna",
            //"load": "z80-sample-program.nex",
        },

    ]
}
