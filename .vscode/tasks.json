{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    
    "echoCommand": true,
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows":{
                "command": "sjasmplus",
                "args": [
                    "--fullpath",
                    "--nologo",
                    "--msg=war",
                    "-D${config:targetType}",
                    "-DTARGETNAME=\"${config:targetName}\"",
                    "--inc=${config:includePath}",
                    "--raw=out/${config:targetName}.rom",
                    "--lst=out/${config:targetName}.lst",
                    "--sld=out/${config:targetName}.sld",
                    "--sym=out/${config:targetName}.sym",
                    "src/${config:targetName}.asm"
                ]
            },
            "problemMatcher": [
                "$problem-matcher-sjasmplus",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
            
        },
        {
            "label": "Verify with Original",
            "dependsOn": "build",
            "type": "shell",
            "command": "fc",
            "args": [
				"/b",
                "bin\\${config:targetName}.bin",
                "out\\${config:targetName}.rom",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
        
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
    ],
}